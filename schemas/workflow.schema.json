{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/kcenon/claude_code_agent/schemas/workflow.schema.json",
  "title": "AD-SDLC Workflow Configuration",
  "description": "Schema for workflow.yaml configuration file",
  "type": "object",
  "required": ["version", "pipeline"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Configuration schema version (semver format)"
    },
    "name": {
      "type": "string",
      "description": "Workflow name"
    },
    "global": {
      "type": "object",
      "description": "Global settings",
      "properties": {
        "project_root": {
          "type": "string",
          "default": "${PWD}",
          "description": "Project root directory"
        },
        "scratchpad_dir": {
          "type": "string",
          "default": ".ad-sdlc/scratchpad",
          "description": "Scratchpad directory for inter-agent communication"
        },
        "output_docs_dir": {
          "type": "string",
          "default": "docs",
          "description": "Output directory for generated documents"
        },
        "log_level": {
          "type": "string",
          "enum": ["DEBUG", "INFO", "WARN", "ERROR"],
          "default": "INFO",
          "description": "Logging level"
        },
        "approval_gates": {
          "type": "object",
          "description": "Human-in-the-loop approval gates",
          "properties": {
            "after_collection": { "type": "boolean", "default": true },
            "after_prd": { "type": "boolean", "default": true },
            "after_srs": { "type": "boolean", "default": true },
            "after_sds": { "type": "boolean", "default": true },
            "after_issues": { "type": "boolean", "default": true },
            "before_merge": { "type": "boolean", "default": false }
          }
        },
        "retry_policy": {
          "type": "object",
          "description": "Retry policy for agents",
          "properties": {
            "max_attempts": { "type": "integer", "minimum": 1, "maximum": 10, "default": 3 },
            "backoff": { "type": "string", "enum": ["linear", "exponential"], "default": "exponential" },
            "base_delay_seconds": { "type": "integer", "minimum": 1, "default": 5 },
            "max_delay_seconds": { "type": "integer", "minimum": 1, "default": 60 }
          }
        },
        "timeouts": {
          "type": "object",
          "description": "Timeout settings (in seconds)",
          "properties": {
            "document_generation": { "type": "integer", "minimum": 60, "default": 300 },
            "issue_creation": { "type": "integer", "minimum": 30, "default": 60 },
            "implementation": { "type": "integer", "minimum": 300, "default": 1800 },
            "pr_review": { "type": "integer", "minimum": 60, "default": 300 }
          }
        }
      }
    },
    "pipeline": {
      "type": "object",
      "required": ["stages"],
      "description": "Pipeline configuration",
      "properties": {
        "stages": {
          "type": "array",
          "minItems": 1,
          "description": "Pipeline stages",
          "items": {
            "type": "object",
            "required": ["name", "agent"],
            "properties": {
              "name": { "type": "string", "minLength": 1, "description": "Stage name" },
              "agent": { "type": "string", "minLength": 1, "description": "Agent to execute this stage" },
              "description": { "type": "string", "description": "Stage description" },
              "inputs": { "type": "array", "items": { "type": "string" }, "description": "Input files/patterns" },
              "outputs": { "type": "array", "items": { "type": "string" }, "description": "Output files/patterns" },
              "next": { "type": ["string", "null"], "description": "Next stage name" },
              "approval_required": { "type": "boolean", "default": false, "description": "Whether approval is required" },
              "parallel": { "type": "boolean", "default": false, "description": "Whether stage runs in parallel" },
              "max_parallel": { "type": "integer", "minimum": 1, "maximum": 10, "description": "Max parallel workers" }
            }
          }
        }
      }
    },
    "agents": {
      "type": "object",
      "description": "Agent configurations",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "model": {
            "type": "string",
            "enum": ["sonnet", "opus", "haiku"],
            "default": "sonnet",
            "description": "Claude model to use"
          },
          "tools": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": ["Read", "Write", "Edit", "Bash", "Glob", "Grep", "WebFetch", "WebSearch"]
            },
            "description": "Tools available to the agent"
          },
          "template": { "type": "string", "description": "Template file path" },
          "max_questions": { "type": "integer", "minimum": 1, "description": "Max clarifying questions" },
          "github": {
            "type": "object",
            "properties": {
              "labels_prefix": { "type": "string" },
              "auto_assign": { "type": "boolean" },
              "merge_strategy": { "type": "string", "enum": ["merge", "squash", "rebase"] },
              "delete_branch_after_merge": { "type": "boolean" }
            }
          },
          "scheduling": {
            "type": "object",
            "properties": {
              "algorithm": { "type": "string", "enum": ["priority_only", "dependency_only", "priority_dependency"] },
              "max_workers": { "type": "integer", "minimum": 1, "maximum": 10 },
              "check_interval_seconds": { "type": "integer", "minimum": 10 }
            }
          },
          "coding": {
            "type": "object",
            "properties": {
              "language": { "type": "string" },
              "test_framework": { "type": "string" },
              "lint_command": { "type": "string" },
              "test_command": { "type": "string" },
              "build_command": { "type": "string" }
            }
          },
          "verification": {
            "type": "object",
            "properties": {
              "run_tests": { "type": "boolean", "default": true },
              "run_lint": { "type": "boolean", "default": true },
              "run_build": { "type": "boolean", "default": true },
              "coverage_threshold": { "type": "number", "minimum": 0, "maximum": 100, "default": 80 }
            }
          },
          "review": {
            "type": "object",
            "properties": {
              "auto_merge": { "type": "boolean", "default": false },
              "require_all_checks": { "type": "boolean", "default": true },
              "coverage_threshold": { "type": "number", "minimum": 0, "maximum": 100, "default": 80 },
              "max_complexity": { "type": "integer", "minimum": 1, "default": 10 }
            }
          }
        }
      }
    },
    "quality_gates": {
      "type": "object",
      "description": "Quality gate configurations",
      "properties": {
        "document_quality": {
          "type": "object",
          "properties": {
            "prd": {
              "type": "object",
              "properties": {
                "required_sections": { "type": "array", "items": { "type": "string" } },
                "min_requirements": { "type": "integer", "minimum": 1 }
              }
            },
            "srs": {
              "type": "object",
              "properties": {
                "required_sections": { "type": "array", "items": { "type": "string" } },
                "min_features": { "type": "integer", "minimum": 1 },
                "min_use_cases_per_feature": { "type": "integer", "minimum": 1 }
              }
            },
            "sds": {
              "type": "object",
              "properties": {
                "required_sections": { "type": "array", "items": { "type": "string" } },
                "min_components": { "type": "integer", "minimum": 1 }
              }
            }
          }
        },
        "code_quality": {
          "type": "object",
          "properties": {
            "coverage_threshold": { "type": "number", "minimum": 0, "maximum": 100, "default": 80 },
            "max_complexity": { "type": "integer", "minimum": 1, "default": 10 },
            "max_line_length": { "type": "integer", "minimum": 80, "default": 100 },
            "no_todos_in_code": { "type": "boolean", "default": false },
            "no_console_logs": { "type": "boolean", "default": true }
          }
        },
        "security": {
          "type": "object",
          "properties": {
            "no_hardcoded_secrets": { "type": "boolean", "default": true },
            "require_input_validation": { "type": "boolean", "default": true },
            "require_authentication": { "type": "boolean", "default": true }
          }
        }
      }
    },
    "notifications": {
      "type": "object",
      "description": "Notification settings",
      "properties": {
        "enabled": { "type": "boolean", "default": false },
        "channels": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["type"],
            "properties": {
              "type": { "type": "string", "enum": ["slack", "email"] },
              "webhook": { "type": "string" },
              "recipients": { "type": "array", "items": { "type": "string" } },
              "events": {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": ["stage_complete", "approval_required", "error", "pipeline_complete"]
                }
              }
            }
          }
        },
        "templates": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        }
      }
    },
    "github": {
      "type": "object",
      "description": "GitHub integration settings",
      "properties": {
        "repo": { "type": "string", "description": "Repository in owner/repo format" },
        "default_branch": { "type": "string", "default": "main" },
        "issue_labels": { "type": "array", "items": { "type": "string" } },
        "pr_labels": { "type": "array", "items": { "type": "string" } },
        "milestone_prefix": { "type": "string" }
      }
    },
    "logging": {
      "type": "object",
      "description": "Logging configuration",
      "properties": {
        "level": { "type": "string", "enum": ["DEBUG", "INFO", "WARN", "ERROR"], "default": "INFO" },
        "format": { "type": "string", "enum": ["json", "text"], "default": "json" },
        "output": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["type"],
            "properties": {
              "type": { "type": "string", "enum": ["file", "console"] },
              "path": { "type": "string" },
              "rotate": { "type": "boolean" },
              "max_size": { "type": "string" },
              "max_files": { "type": "integer", "minimum": 1 },
              "format": { "type": "string", "enum": ["json", "pretty"] }
            }
          }
        },
        "include": { "type": "array", "items": { "type": "string" } }
      }
    },
    "monitoring": {
      "type": "object",
      "description": "Monitoring configuration",
      "properties": {
        "enabled": { "type": "boolean", "default": false },
        "metrics": { "type": "array", "items": { "type": "string" } }
      }
    }
  }
}
