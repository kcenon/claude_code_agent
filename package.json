{
  "name": "ad-sdlc",
  "version": "0.0.1",
  "description": "Agent-Driven Software Development Lifecycle system built with Claude Agent SDK",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "ad-sdlc": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:e2e": "vitest run --config vitest.e2e.config.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "clean": "rm -rf dist",
    "prepare": "npm run build",
    "todo": "grep -rn 'TODO(' src/ --include='*.ts' | sort",
    "todo:fixme": "grep -rn 'FIXME(' src/ --include='*.ts' | sort",
    "todo:hack": "grep -rn 'HACK' src/ --include='*.ts' | sort",
    "todo:all": "grep -rn -E '(TODO|FIXME|HACK)' src/ --include='*.ts' | sort",
    "todo:count": "echo 'TODO:' && grep -r 'TODO(' src/ --include='*.ts' | wc -l && echo 'FIXME:' && grep -r 'FIXME(' src/ --include='*.ts' | wc -l && echo 'HACK:' && grep -r 'HACK' src/ --include='*.ts' | wc -l"
  },
  "keywords": [
    "claude",
    "agent",
    "sdlc",
    "ai",
    "automation",
    "software-development"
  ],
  "author": "kcenon",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kcenon/claude_code_agent.git"
  },
  "bugs": {
    "url": "https://github.com/kcenon/claude_code_agent/issues"
  },
  "homepage": "https://github.com/kcenon/claude_code_agent#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/inquirer": "^9.0.9",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.0.3",
    "@types/pdf-parse": "^1.1.5",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.0.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "dotenv": "^17.2.3",
    "inquirer": "^13.1.0",
    "js-yaml": "^4.1.1",
    "mammoth": "^1.11.0",
    "pdf-parse": "^2.4.5",
    "ts-morph": "^27.0.2",
    "zod": "^4.2.1"
  }
}
